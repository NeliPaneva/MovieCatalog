
<h1>About</h1>

@model IEnumerable<Movie.Web.Models.MovieGroup>

@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie  Statistics</h2>

<table id="table1">
    <tr>
        <th>
            Company
        </th>
        <th>
            Movies
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @item.MovieCount
            </td>
        </tr>
    }
</table>